---
import "../styles/style.css";

import Hero from "../components/Hero.astro";
import Experiencia from "../components/Experiencia.astro";
import InstalacionesIndustriales from "../components/InstalacionesIndustriales.astro";
import ConstruccionLiviana from "../components/ConstruccionLiviana.astro";
import Procesos from "../components/Procesos.astro";
import Contacto from "../components/Contacto.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro";
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Multiservicios Industriales García - Fabricación, instalación y mantenimiento de sistemas industriales en Monterrey. 25 años de experiencia en ductería, pailería, herrería y construcción especializada." />
    <meta name="keywords" content="servicios industriales Monterrey, ductería industrial, pailería, herrería industrial, construcción liviana, mantenimiento industrial, soldadura industrial" />
    <title>Multiservicios Industriales García | Monterrey, N.L.</title>

	<!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  </head>
  <body>
	    <!-- Navbar -->
    <nav class="navbar" id="navbar">
      <img src="/img/logo.png" alt="Multiservicios Industriales García" class="navbar-logo" />
      
      <button class="navbar-toggle" id="navbar-toggle" aria-label="Menú">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="navbar-menu" id="navbar-menu">
        <a href="#inicio" class="navbar-link">Inicio</a>
        <a href="#trabajos" class="navbar-link">Trabajos</a>
        <a href="#experiencia" class="navbar-link">Experiencia</a>
        <a href="#instalaciones" class="navbar-link">Instalaciones</a>
        <a href="#construccion" class="navbar-link">Construcción</a>
        <a href="#contacto" class="navbar-link">Contacto</a>
      </div>
    </nav>

    <Hero />
    <Procesos />
    <Experiencia />
    <InstalacionesIndustriales />
    <ConstruccionLiviana />
    <Contacto />
    <SpeedInsights/>

    <!-- Botón flotante de WhatsApp -->
    <a 
      href="https://wa.me/528186908682?text=Hola,%20me%20gustaría%20información%20sobre%20un%20servicio" 
      class="whatsapp-float"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Contactar por WhatsApp"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
      </svg>
    </a>
    <script>
      // Toggle mobile menu
      const toggle = document.getElementById('navbar-toggle');
      const menu = document.getElementById('navbar-menu');
      const navbar = document.getElementById('navbar');

      toggle?.addEventListener('click', () => {
        menu?.classList.toggle('active');
      });

      // Close menu on link click
      const links = document.querySelectorAll('.navbar-link');
      links.forEach(link => {
        link.addEventListener('click', () => {
          menu?.classList.remove('active');
        });
      });

      // Navbar scroll effect
      window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
          navbar?.classList.add('scrolled');
        } else {
          navbar?.classList.remove('scrolled');
        }
      });
// Smooth scroll for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', (e) => {
    e.preventDefault();
    const href = anchor.getAttribute('href');
    const target = href ? document.querySelector(href) : null;
    if (target instanceof HTMLElement) {
      const offset = 70; // navbar height
      const targetPosition = target.offsetTop - offset;
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }
  });
});
    </script>
  </body>
</html>
